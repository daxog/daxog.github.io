---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/webp" href="/cute.webp" />
    <meta name="viewport" content="width=device-width" />
    <title>{frontmatter.title} | daxog</title>
  </head>
  <body class="dark:bg-neutral-900 dark:text-gray-50">
    <Navbar />
    <div class="text-center mx-auto mt-12 text-left max-w-2xl px-4">
      <h1 class="text-3xl font-bold">{frontmatter.title}</h1>
      <p class="text-gray-500 mt-2 mb-4">
        {new Date(frontmatter.date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric'})}
      </p>
      <article class="prose lg:prose-xl max-w-none">
        <slot />
      </article>
    </div>
  </body>
</html>